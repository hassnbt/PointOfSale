<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.pos.HelloController">

    <!-- Left Side Navigation Bar -->
    <left>
        <VBox spacing="20" prefWidth="250" style="-fx-background-color: #2C3E50; -fx-padding: 20px;">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>

            <Button text="🏠 Home" fx:id="homeButton" onAction="#handleHomeButton"
                    style="-fx-base: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200px;"/>
            <Button text="📦 Inventory" fx:id="inventoryButton" prefWidth="200"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="🛒 Sales" fx:id="salesButton" prefWidth="200"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Button text="📊 Reports" fx:id="reportsButton" prefWidth="200"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <GridPane hgap="15" vgap="15">
            <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

            <!-- Shop Name Title -->
            <Label text="Dosa Cola POS System" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <font>
                    <Font name="Arial" size="26"/>
                </font>
            </Label>

            <!-- Product Details Section -->
            <Label text="Product Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="productNameField" prefWidth="220" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="priceField" prefWidth="220" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="quantityField" prefWidth="220" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Button text="➕ Add Product" fx:id="addButton" onAction="#handleAddProduct"
                    GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2"
                    prefWidth="220"
                    style="-fx-background-color: #4CAF50; -fx-font-size: 14px; -fx-font-weight: bold;"/>

            <!-- Search Bar -->
            <HBox spacing="15" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Label text="Search Product:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="searchField" promptText="Enter product name..." prefWidth="300"/>
            </HBox>

            <!-- Product Table -->
            <TableView fx:id="productTable" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <columns>
                    <TableColumn text="Product Name" fx:id="productColumn"/>
                    <TableColumn text="Price" fx:id="priceColumn"/>
                    <TableColumn text="Quantity" fx:id="quantityColumn"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <!-- Action Buttons -->
            <HBox spacing="15" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Button text="🗑 Delete" fx:id="deleteButton" onAction="#handleDeleteProduct"
                        prefWidth="180" style="-fx-background-color: #F44336; -fx-font-weight: bold;"/>

                <Button text="🔼 Increase Quantity" fx:id="increaseQuantityButton" onAction="#handleIncreaseQuantity"
                        prefWidth="180" style="-fx-background-color: #2196F3; -fx-font-weight: bold;"/>

                <Button text="🔽 Decrease Quantity" fx:id="decreaseQuantityButton" onAction="#handleDecreaseQuantity"
                        prefWidth="180" style="-fx-background-color: #FFC107; -fx-font-weight: bold;"/>
            </HBox>
        </GridPane>
    </center>

</BorderPane>
