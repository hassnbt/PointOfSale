<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
            fx:controller="com.example.pos.HomeController">

    <!-- Left Side Navigation Bar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #2C3E50; -fx-padding: 15px; -fx-pref-width: 220px;">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Button text="ðŸ“¦ Inventory" fx:id="inventoryButton" onAction="#handleInventoryButton"
                    style="-fx-pref-width: 200px; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="ðŸ›’ Sales" fx:id="salesButton" onAction="#handleSalesButton"
                    style="-fx-pref-width: 200px; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="ðŸ“Š Reports" fx:id="reportsButton" onAction="#handleReportsButton"
                    style="-fx-pref-width: 200px; -fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Button text="ðŸ”™ Back" fx:id="backButton" onAction="#handleBackButton"
                    style="-fx-pref-width: 200px; -fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Header -->
            <Label text="POS Billing System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <!-- Search Bar for Adding Products -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search Product..." style="-fx-pref-width: 300px;"/>
                <Button text="Add" fx:id="addButton" onAction="#handleAddProduct"
                        style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Product List Table -->
            <TableView fx:id="productTable" style="-fx-pref-height: 350px; -fx-border-color: #34495E;">
                <columns>
                    <TableColumn text="Product Name" fx:id="productNameColumn" minWidth="200"/>
                    <TableColumn text="Price" fx:id="priceColumn" minWidth="100"/>
                    <TableColumn text="Quantity" fx:id="quantityColumn" minWidth="100"/>
                    <TableColumn text="Total" fx:id="totalColumn" minWidth="100"/>
                </columns>
            </TableView>

            <!-- Total Amount Section -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Label text="Total Amount: " style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="totalAmountLabel" text="0.00" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #E74C3C;"/>
            </HBox>

            <!-- Checkout and Clear Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button text="Clear" fx:id="clearButton" onAction="#handleClear"
                        style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Checkout" fx:id="checkoutButton" onAction="#handleCheckout"
                        style="-fx-background-color: #F1C40F; -fx-text-fill: black; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
